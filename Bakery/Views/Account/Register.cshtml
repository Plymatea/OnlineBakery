@{
  Layout = "_Layout";
}

@using Bakery.ViewModels

@model RegisterViewModel



<div class="row mt-5">
  <div class="col-2">
  </div>
  <div class="col-8">
    <h2>Register a new user</h2>
    <hr />
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
      @Html.LabelFor(user => user.Email)
      @Html.TextBoxFor(user=> user.Email, new { @class = "form-control required"})

      @Html.LabelFor(user=> user.Password)
      @Html.PasswordFor(user=> user.Password, new { @class = "form-control required"})

      @Html.LabelFor(user=> user.ConfirmPassword)
      @Html.PasswordFor(user=> user.ConfirmPassword, new { @class = "form-control required"})

      <input type="submit" value="Register" class="btn btn-dark mt-2"/>
    }
  </div>
  <div class="col-2">
</div>
</div>