@{
  Layout = "_Layout";
}
@using Bakery.Models;
@model FlavorTreatViewModel;  


<h3 style="text-align: center">Mix and match any treats and flavors</h3>

<hr/>
<div class="row">
  <div class="col-4">
    <h4 style="text-align: center">Treats!</h4>
    <hr class="px-5">
    <ul>
      @foreach(Treat item in Model.Treats)
      {
        <li>@Html.ActionLink(item.Name, "Details", "Treats", new {id = item.TreatId})</li>
  
      }
    </ul>
  </div>
  <div class="col-4" align="center">
    <form action="/">
      @Html.TextBox("searchString", "") 
      <button class="btn p-2 btn-default" style="color: Black">Search</button>
    </form>
  </div>
  <div class="col-4">
    <h4 style="text-align: center">Flavors!</h4>
    <hr class="px-5">
    <ul>
      @foreach(Flavor item in Model.Flavors)
      {
        <li>@Html.ActionLink(item.Name, "Details", "Flavors", new {id = item.FlavorId})</li>
      }
    </ul>
  </div>
</div>
