@{
  Layout = "_Layout";
}

@model Bakery.Models.Flavor

<h2>@Model.Name Details</h2>
<hr />
<h3>Name: @Html.DisplayFor(model => model.Name)</h3>
@if (Model.JoinEntities.Count == 0)
{
  <p>This flavor hasn't been added to any treats yet.</p>
} else
{
  <h5>Treats with this flavor: </h5>
    <ul>
      @foreach(var join in Model.JoinEntities)
      {
        @using (Html.BeginForm("DeleteTreat", "Flavors"))
        {  
          @Html.Hidden("joinId", @join.FlavorTreatId);
          <li>@join.Treat.Name || <input type="submit" value="Delete" style="font-size:.6em; padding:.25em" class="btn btn-xs btn-dark"/></li>
        }
      }
    </ul> 
}
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>