@{
  Layout = "_Layout";
}

@model Bakery.Models.Flavor;  

<div class="row mt-5">
  <div class="col-2">
  </div>
  <div class="col-8">
  <h4>Add a new Flavor!</h4>
  <hr class="px-5">
    @using (Html.BeginForm())
    {
      @Html.LabelFor(m => Model.Name, "Flavor Name: ")
      @Html.TextBoxFor(m => Model.Name, new { @class = "form-control required"})
      <input type="submit" value="Add to the flavor pool" class="btn btn-dark mt-2">
    }
  </div>
  <div class="col-2">
</div>
</div>
<hr/>
